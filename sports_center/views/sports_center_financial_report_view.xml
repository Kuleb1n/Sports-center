<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_sports_center_financial_report_tree" model="ir.ui.view">
        <field name="name">sports.center.financial.report.tree</field>
        <field name="model">sports.center.financial.report</field>
        <field name="arch" type="xml">
            <tree string="Financial report" sample="1">
                <field name="current_year" decoration-info="current_year"/>
                <field name="january"/>
                <field name="february"/>
                <field name="march"/>
                <field name="april"/>
                <field name="may"/>
                <field name="june"/>
                <field name="july"/>
                <field name="august"/>
                <field name="september"/>
                <field name="october"/>
                <field name="november"/>
                <field name="december"/>
                <field name="annual_profit" decoration-info="annual_profit"/>
                <field name="sports_center_card_id"/>
            </tree>
        </field>
    </record>

    <record id="action_sports_center_financial_report" model="ir.actions.act_window">
        <field name="name">Financial report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sports.center.financial.report</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>